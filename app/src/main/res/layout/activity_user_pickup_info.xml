<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical"
    tools:context="com.shrinkcom.app.UserPickupInfoActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="@color/app_color"
        app:titleTextColor="@color/colorAccent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/size_16"
                android:layout_width="match_parent"
                android:text="@string/pickd"
                android:gravity="left"
                android:layout_toRightOf="@+id/back"
                android:fontFamily="@font/arial"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:id="@+id/id_layout_pick_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:src="@drawable/roadstarlogo"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/personalinfo"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:layout_marginTop="@dimen/size_20"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_14"
                />


            <EditText
                android:id="@+id/edt_companyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/companyname"
                android:inputType="text"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_20"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:inputType="text"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/size_16"
                >

                <EditText
                    android:id="@+id/edt_phcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="+91"
                    android:layout_weight="0.3"
                    android:inputType="text"
                    android:fontFamily="@font/arialbd"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="@dimen/size_14"
                    android:background="@drawable/edtwhitebg"
                    android:textColorHint="@color/colordarkgrey"
                    android:textColor="@color/colordarkgrey"
                    android:textSize="@dimen/size_12"
                    />


                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone"
                    android:layout_weight="0.7"
                    android:inputType="number"
                    android:layout_marginLeft="@dimen/size_10"
                    android:fontFamily="@font/arialbd"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="@dimen/size_14"
                    android:background="@drawable/edtwhitebg"
                    android:textColorHint="@color/colordarkgrey"
                    android:textColor="@color/colordarkgrey"
                    android:textSize="@dimen/size_12"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/emailid"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Pickupdetail"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:layout_marginTop="@dimen/size_20"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_14"
                />

            <EditText
                android:id="@+id/edt_addres1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/addressline1"
                android:inputType="text"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />

            <EditText
                android:id="@+id/edt_addres2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/addressline2"
                android:inputType="text"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg">


                <Spinner
                    android:id="@+id/edt_country"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="@dimen/size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/size_16"
                >

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edtwhitebg">


                    <Spinner
                        android:id="@+id/edt_stat"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_postalcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/postal"
                    android:layout_weight="0.5"
                    android:inputType="text"
                    android:layout_marginLeft="@dimen/size_10"
                    android:fontFamily="@font/arialbd"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="@dimen/size_14"
                    android:background="@drawable/edtwhitebg"
                    android:textColorHint="@color/colordarkgrey"
                    android:textColor="@color/colordarkgrey"
                    android:textSize="@dimen/size_12"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg">

                <Spinner
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update"
                android:fontFamily="@font/arialbd"
                android:gravity="center"
                android:layout_marginBottom="@dimen/size_20"
                android:background="@drawable/full_circle_booking"
                android:padding="@dimen/size_12"
                android:layout_marginTop="@dimen/size_20"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/size_14" />

        </LinearLayout>






        <LinearLayout
            android:id="@+id/idlayout_delivery_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:visibility="gone"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:src="@drawable/roadstarlogo"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dropinfo"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:layout_marginTop="@dimen/size_20"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_14"
                />


            <EditText
                android:id="@+id/edt_companynamedelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/companyname"
                android:inputType="text"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_20"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />



            <EditText
                android:id="@+id/edt_namedelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:inputType="text"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/size_16"
                >

                <EditText
                    android:id="@+id/edt_phcodedelivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="+91"
                    android:layout_weight="0.3"
                    android:inputType="text"
                    android:fontFamily="@font/arialbd"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="@dimen/size_14"
                    android:background="@drawable/edtwhitebg"
                    android:textColorHint="@color/colordarkgrey"
                    android:textColor="@color/colordarkgrey"
                    android:textSize="@dimen/size_12"
                    />


                <EditText
                    android:id="@+id/edt_phonedelivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone"
                    android:layout_weight="0.7"
                    android:inputType="number"
                    android:layout_marginLeft="@dimen/size_10"
                    android:fontFamily="@font/arialbd"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="@dimen/size_14"
                    android:background="@drawable/edtwhitebg"
                    android:textColorHint="@color/colordarkgrey"
                    android:textColor="@color/colordarkgrey"
                    android:textSize="@dimen/size_12"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drooffdn"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:layout_marginTop="@dimen/size_20"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_14"
                />

            <EditText
                android:id="@+id/edt_pickadddelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Drop Address"
                android:inputType="text"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />


            <EditText
                android:id="@+id/edt_locationdelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Drop Location"
                android:inputType="text"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parceldetail"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:layout_marginTop="@dimen/size_20"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_14"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_16"
                android:padding="@dimen/size_10"
                android:background="@drawable/edtwhitebg">

                <Spinner
                    android:id="@+id/spn_categorydelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_16"
                android:padding="@dimen/size_10"
                android:background="@drawable/edtwhitebg">

                <Spinner
                    android:id="@+id/spn_subcategorydelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>


            </LinearLayout>
            <EditText
                android:id="@+id/edt_parcelheightdelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/parcelheight"
                android:inputType="number"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />


            <EditText
                android:id="@+id/edt_parcelwidthdelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/parcelwidth"
                android:inputType="number"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />



            <EditText
                android:id="@+id/edt_parcelweightdelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/parcelweight"
                android:inputType="number"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/size_14"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/edtwhitebg"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_12"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10"
                    android:layout_weight="0.5"
                    android:layout_marginTop="@dimen/size_14"
                    android:text="@string/parcel_images"
                    android:textColor="@color/colordarkgrey"
                    android:fontFamily="@font/arialbd"
                    android:textSize="@dimen/size_14"></TextView>
                <TextView
                    android:id="@+id/uploadImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10"
                    android:layout_weight="0.5"
                    android:layout_marginTop="@dimen/size_14"
                    android:text="@string/addimag"
                    android:textColor="@color/colordarkgrey"
                    android:gravity="right"
                    android:fontFamily="@font/arialbd"
                    android:textSize="@dimen/size_14"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgrey"
                ></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:id="@+id/recycleimage"
                    android:nestedScrollingEnabled="true"
                    >
                </GridView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vehicletypep"
                android:fontFamily="@font/arialbd"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:padding="@dimen/size_5"
                android:layout_marginTop="@dimen/size_10"
                android:textColor="@color/colordarkgrey"
                android:textSize="@dimen/size_14"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edtwhitebg"
                android:orientation="horizontal"
                android:weightSum="3">



                <com.shrinkcom.utils.HorizontalListView
                    android:id="@+id/idrecyclevehicletype"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#ccffffff"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:requiresFadingEdge="horizontal"
                    android:visibility="visible"
                    />



            </LinearLayout>



            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:fontFamily="@font/arialbd"
                android:textSize="@dimen/size_14"
                android:gravity="center"
                android:background="@drawable/full_circle_booking"
                android:padding="@dimen/size_12"
                android:layout_marginBottom="@dimen/size_20"
                android:layout_marginTop="@dimen/size_20"
                android:textColor="@color/colorwhite"

                />


        </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>
