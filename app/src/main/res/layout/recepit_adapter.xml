<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/reciepit_image"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/amount_reciept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/reciepit_image"
        android:background="@color/white"
        android:gravity="start"
        android:layout_marginStart="10dp"
        android:padding="2dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/status_recipt_history_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/reciepit_image"
        android:background="@color/white"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/amount_reciept"
        android:layout_marginStart="10dp"
        android:padding="2dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/date_recipt_history_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/reciepit_image"
        android:background="@color/white"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/status_recipt_history_adapter"
        android:layout_marginStart="10dp"
        android:padding="2dp"
        android:textColor="@color/black" />

</RelativeLayout>